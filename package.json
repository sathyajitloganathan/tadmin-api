{
  "name": "tadmin-api",
  "version": "1.0.0",
  "description": "Assessment for software engineer role",
  "main": "index.js",
  "scripts": {
    "start:migrate:prod": "npm-run-all docker:prod:db wait-db prisma-migrate prisma-generate start",
    "wait-db": "./node_modules/.bin/wait-port 3306",
    "start": "npm-run-all post-install server",
    "server": "pm2 start ecosystem.config.json --no-daemon",
    "prisma-migrate": "prisma migrate deploy",
    "prisma-generate": "npx prisma generate",
    "post-install": "$(npm bin)/pm2 install typescript",
    "dev": "cross-env NODE_ENV=development nodemon node-server/index.js",
    "test": "jest -i --colors --verbose --detectOpenHandles --testTimeout=20000",
    "pretest": "npm-run-all docker:test:db wait-db reset-db prisma-migrate prisma-generate",
    "test:watch": "jest -i --watchAll",
    "coverage": "jest -i --coverage",
    "coverage:coveralls": "jest -i --coverage --coverageReporters=text-lcov | coveralls",
    "reset-db": "npx prisma migrate reset --force",
    "docker:prod:db": "docker-compose  -f docker-compose.yml up -d --remove-orphans",
    "docker:test:db": "docker-compose -f docker-compose.testing.yml up --force-recreate -d --remove-orphans",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --check **/*.js",
    "prettier:fix": "prettier --write **/*.js"
  },
  "author": "Sathyajit Loganathan",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^3.14.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-validation": "^4.1.0",
    "helmet": "^6.0.0",
    "http-status": "^1.5.3",
    "joi": "^17.6.2",
    "morgan": "^1.10.0",
    "npm-run-all": "^4.1.5",
    "path": "^0.12.7",
    "pm2": "^5.2.0",
    "reflect-metadata": "^0.1.13",
    "ts-node": "9.1.1",
    "wait-port": "^1.0.4",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "4.17.13",
    "@types/jest": "^27.4.1",
    "@types/node": "^18.11.3",
    "@types/supertest": "^2.0.12",
    "jest": "^29.2.1",
    "jest-mock-extended": "^2.0.9",
    "prisma": "^3.14.0",
    "sinon": "^14.0.1",
    "supertest": "^6.3.0",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.4"
  }
}
